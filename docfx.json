{
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "template-statscale/**"
        ]
      }
    ],
    "output": "_site",
    "globalMetadata": {
      "_appName": "",
      "_appTitle": "Statscale",
      "_enableSearch": true,
      "pdf": false,
      "_appLogoPath": "/template-statscale/statscale.png",
      "_appFooter": "&copy; <a href='https://www.statscale.com'>Statscale</a>",
      "_enableNewTab": true,
      "_appFaviconPath": "/template-statscale/favicon.ico"
    },
    "template": [
     "default",
     "modern",
     "template-statscale"
    ]   
  }
}
